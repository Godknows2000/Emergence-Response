@page
@model SignupModel


<div class="offset-md-3 col-md-6">
    <h3 class="text-center mt-4">Create new account</h3>
    <form method="post">
        <div class="card shadow mb-5">
        <div class="card-header">
            <h5>Personal information</h5>
        </div>
        <div class="card-body">
                
            <div class="row mb-3">
                <label class="col-md-4 form-label">Forename(s)</label>                  
               
                <div class="col-md-8">
                    <input asp-for="Member.Forename" class="form-control"/>
                </div>
                    
            </div>
            <div class="row mb-3">
                    <label class="col-md-4 form-label">Surname</label>                  
               
                <div class="col-md-8">
                    <input asp-for="Member.Surname" class="form-control"/>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4 form-label">Email</label>                                
                <div class="col-md-8">
                    <input asp-for="Member.Email" class="form-control"/>
                </div>                   
            </div>
            <div class="row mb-3">
                <label class="col-md-4 form-label">Phone</label>                                
                <div class="col-md-8">
                    <input asp-for="Member.Phone" class="form-control"/>
                </div>
                    
            </div>
                
        </div>
        <div class="card-header">
            <h5>Account information</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <label class="col-md-4 form-label">Password</label>                                
                <div class="col-md-8">
                    <input type="password" class="form-control" name="password"/>
                </div>                   
            </div>
            <div class="row mb-3">
                <label class="col-md-4 form-label" name="confirm_password">Confirm password</label>                                
                <div class="col-md-8">
                    <input type="password" class="form-control"/>
                </div>
                    
            </div>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-success">Save</button>
        </div>
    </div>
    </form>
    
</div>

